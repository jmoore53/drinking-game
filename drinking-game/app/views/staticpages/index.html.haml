-# Change these version strings to update libraries


%html(ng-app="drinkingGame")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title Drinking Game

    -# External Libraries
    %link{rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"}

    %script{src: "https://code.jquery.com/jquery-2.1.4.min.js"}
    %script{src: "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"}

    -# Our own JS and CSS
    - Dir.glob("./js/*.js").each do |js|
      %script{src: "js/" + File.basename(js)}

    - Dir.glob("./css/*.css").each do |css|
      %link{rel: "stylesheet", href: "css/" + File.basename(css)}

  %body
    .container
      %h1 Drinking Game
      %selector

